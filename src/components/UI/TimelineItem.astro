---
interface Props {
  year: string;
  title: string;
  description: string;
  isLast?: boolean;
}

const { year, title, description, isLast = false } = Astro.props;
---

<div class='relative pl-8 sm:pl-16 py-6 group'>
  {/* The Vertical Line */}
  {
    !isLast && (
      <div class='absolute left-2 sm:left-7 top-3 w-px h-full bg-gray-300 -translate-x-1/2 translate-y-3' />
    )
  }

  {/* The Point of the Line */}
  <div
    class='absolute left-2 sm:left-7 top-7 w-4 h-4 bg-primary-600 border-4 border-white rounded-full -translate-x-1/2'
  >
  </div>

  <div class='flex flex-col sm:flex-row items-start'>
    <time
      class='sm:w-28 text-xs text-gray-500 uppercase font-semibold mt-1 mb-2 sm:mb-0'
    >
      {year}
    </time>
    <div class='flex-1'>
      <h3 class='text-xl font-bold text-gray-900 mb-2'>{title}</h3>
      <p class='text-gray-700 leading-relaxed'>
        {description}
      </p>
    </div>
  </div>
</div>
