---
import BaseLayout from '@layouts/BaseLayout.astro';
import PostLayout from '@layouts/PostLayout.astro';
import Button from '@components/UI/Button.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { formatDate } from '@utils/dateUtils';
import Icon from '@components/UI/Icon.astro';

// Generate static paths for all sermons
export async function getStaticPaths() {
  try {
    const sermonEntries = await getCollection('sermons', ({ data }) => {
      return import.meta.env.PROD ? !data.draft : true;
    });

    return sermonEntries.map((entry) => ({
      params: { slug: entry.slug },
      props: { entry },
    }));
  } catch (error) {
    // If the collection doesn't exist yet, return an empty array
    return [];
  }
}

// Get the sermon data
const { entry } = Astro.props;
const { Content } = await entry.render();

// Format the date for display
const formattedDate = formatDate(entry.data.date);

// Find related sermons from the same series (if available)
let relatedSermons: CollectionEntry<'sermons'>[] = [];
if (entry.data.series) {
  try {
    const allSermons = await getCollection('sermons', ({ data, slug }) => {
      const isNotDraft = import.meta.env.PROD ? !data.draft : true;
      const isSameSeries = data.series === entry.data.series;
      const isNotCurrentSermon = slug !== entry.slug;

      return isNotDraft && isSameSeries && isNotCurrentSermon;
    });

    relatedSermons = allSermons
      .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
      .slice(0, 3);
  } catch (error) {
    console.error('Error fetching related sermons:', error);
  }
}
---

<BaseLayout
  title={`${entry.data.title} - Sermons - Church Name`}
  description={entry.data.summary ||
    `Listen to "${entry.data.title}" by ${entry.data.speaker}`}
  image={entry.data.image
    ? { url: entry.data.image, alt: entry.data.title }
    : undefined}
  type='article'
>
  <PostLayout
    title={entry.data.title}
    description={entry.data.summary}
    image={entry.data.image
      ? { url: entry.data.image, alt: entry.data.title }
      : undefined}
    date={entry.data.date}
    author={entry.data.speaker}
    tags={entry.data.tags}
  >
    <!-- Sermon Details -->
    <div class='bg-gray-50 rounded-lg p-6 mb-8'>
      <div class='grid grid-cols-1 md:grid-cols-2 gap-6'>
        <div>
          <div class='mb-4'>
            <h3 class='text-lg font-bold mb-2'>Speaker</h3>
            <p class='flex items-center'>
              <Icon name='user' class='h-5 w-5 mr-2 text-primary-600' />
              {entry.data.speaker}
            </p>
          </div>

          {
            entry.data.series && (
              <div class='mb-4'>
                <h3 class='text-lg font-bold mb-2'>Series</h3>
                <p class='flex items-center'>
                  <Icon name='archive' class='h-5 w-5 mr-2 text-primary-600' />
                  {entry.data.series}
                </p>
              </div>
            )
          }
        </div>

        <div>
          <div class='mb-4'>
            <h3 class='text-lg font-bold mb-2'>Date</h3>
            <p class='flex items-center'>
              <Icon name='calendar' class='h-5 w-5 mr-2 text-primary-600' />
              {formattedDate}
            </p>
          </div>

          {
            entry.data.scripture && (
              <div>
                <h3 class='text-lg font-bold mb-2'>Scripture</h3>
                <p class='flex items-center'>
                  <Icon name='book' class='h-5 w-5 mr-2 text-primary-600' />
                  {entry.data.scripture}
                </p>
              </div>
            )
          }
        </div>
      </div>
    </div>

    <!-- Media Players -->
    <div class='mb-8 space-y-6'>
      {
        entry.data.videoUrl && (
          <div>
            <h3 class='text-xl font-bold mb-4'>Watch</h3>
            <div class='aspect-w-16 aspect-h-9 rounded-lg overflow-hidden'>
              <iframe
                src={entry.data.videoUrl}
                title={entry.data.title}
                allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture'
                allowfullscreen
                class='w-full h-full'
              />
            </div>
          </div>
        )
      }

      {
        entry.data.audioUrl && (
          <div>
            <h3 class='text-xl font-bold mb-4'>Listen</h3>
            <audio controls class='w-full'>
              <source src={entry.data.audioUrl} type='audio/mpeg' />
              Your browser does not support the audio element.
            </audio>
          </div>
        )
      }
    </div>

    <!-- Sermon Content -->
    <Content />

    <!-- Related Sermons -->
    {
      relatedSermons.length > 0 && (
        <div class='mt-12'>
          <h2 class='text-2xl font-bold mb-6'>More From This Series</h2>
          <div class='grid grid-cols-1 md:grid-cols-3 gap-6'>
            {relatedSermons.map((sermon) => (
              <a
                href={`/sermons/${sermon.slug}`}
                class='block bg-gray-50 rounded-lg p-4 hover:bg-gray-100 transition-colors'
              >
                <h3 class='font-bold mb-2'>{sermon.data.title}</h3>
                <p class='text-sm text-gray-600 mb-2'>
                  {formatDate(sermon.data.date)}
                </p>
                <p class='text-primary-600 text-sm font-medium'>
                  Listen/Watch â†’
                </p>
              </a>
            ))}
          </div>
        </div>
      )
    }

    <!-- Action Buttons -->
    <div class='mt-12 flex flex-wrap gap-4'>
      <Button href='/sermons' variant='outline'> Back to All Sermons </Button>

      {
        entry.data.series && (
          <Button
            href={`/sermons?series=${encodeURIComponent(entry.data.series)}`}
            variant='outline'
          >
            View All in This Series
          </Button>
        )
      }
    </div>
  </PostLayout>
</BaseLayout>
